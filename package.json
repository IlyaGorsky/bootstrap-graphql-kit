{
    "name": "simple-graphql-bootstrap",
    "version": "1.0.0",
    "license": "MIT",
    "type": "module",
    "engines": {
        "node": ">= 18"
    },
    "scripts": {
        "build": "vite build",
        "preview": "vite preview --open",
        "start": "bash scripts/start.sh",
        "test": "vitest",
        "ts-check": "tsc -p  ./tsconfig.json --noEmit",
        "lint": "eslint ./src",
        "demo-1": "npx ts-node client/demo.ts",
        "demo-2": "npx ts-node ./src/app/loadDataDemo.ts",
        "graphql:schema": "npx ts-node ./scripts/schema/schema.ts",
        "graphql:playground": "vite serve --open ./playground/index.html",
        "graphql:build-plugin": "tsc -p ./scripts/bootstrap-generate/tsconfig.json",
        "graphql:generate": "graphql-codegen-esm ./.graphqlrc.yml",
        "graphql:generate-watch": "graphql-codegen-esm --watch ./.graphqlrc.yml",
        "graphql:generate-debug": "graphql-codegen-esm --debug --verbose ./.graphqlrc.yml",
        "graphql:generate-watch-debug": "graphql-codegen-esm --watch --debug --verbose ./.graphqlrc.yml"
    },
    "dependencies": {
        "@tanstack/react-query": "5.28.9",
        "axios": "1.6.8",
        "dotenv": "16.4.5",
        "graphiql": "^3.2.0",
        "graphql": "16.8.1",
        "graphql-tag": "2.12.6",
        "prettier": "3.2.5",
        "react": "18.2.0",
        "react-dom": "18.2.0",
        "typescript": "5.4.3",
        "undici": "6.10.1"
    },
    "devDependencies": {
        "@graphql-codegen/cli": "5.0.2",
        "@graphql-codegen/near-operation-file-preset": "3.0.0",
        "@graphql-codegen/typescript-operations": "^4.2.0",
        "@graphql-eslint/eslint-plugin": "3.20.1",
        "@parcel/watcher": "^2.4.1",
        "@testing-library/react": "14.2.2",
        "@types/mustache": "4.2.5",
        "@types/node": "20.11.30",
        "@types/react": "18.2.74",
        "@typescript-eslint/eslint-plugin": "7.4.0",
        "@typescript-eslint/parser": "7.4.0",
        "@vitejs/plugin-react": "4.2.1",
        "eslint": "8.57.0",
        "eslint-config-prettier": "9.1.0",
        "eslint-plugin-prettier": "5.1.3",
        "jsdom": "24.0.0",
        "mustache": "4.2.0",
        "type-fest": "4.14.0",
        "vitest": "1.4.0"
    }
}
